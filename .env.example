# Database Credentials
DB_NAME=autogitgrow_db
DB_USER=CodeDeX
DB_PASSWORD=passwordisroot

# GitHub Personal Access Token (PAT)
# This token needs 'repo' and 'user' scopes for full functionality.
# Generate one at https://github.com/settings/tokens
PAT_TOKEN=Your_GitHub_PAT_Token_Here

# GitHub Bot User (your GitHub username)
BOT_USER=Your_GitHub_Username_Here

# Google Gemini API Key (required for AI Insights)
GEMINI_API_KEY=Your_Google_Gemini_API_Key_Here

# Frontend API URL (used by Vite in development)
# This is already set in docker-compose.yml for inter-container communication
VITE_API_URL=http://localhost:8000
# Optional: if you enabled AUTOMATION_API_KEY on backend, mirror it here so frontend can send the header
VITE_AUTOMATION_API_KEY=

# Number of users to follow per run
FOLLOWERS_PER_RUN=150

# Automation dispatch (GitHub Actions) configuration
# The backend will use these to trigger workflow_dispatch events
GITHUB_REPO_OWNER=your-gh-username-or-org
GITHUB_REPO_NAME=your-repo-name
GITHUB_PAT=ghp_your_pat_with_workflow_scope
# Default branch/ref for dispatch (optional, defaults to 'main')
AUTOMATION_DEFAULT_REF=main
# Optional API key to protect automation endpoints
# If set, clients must send header: X-Automation-Key: ${AUTOMATION_API_KEY}
AUTOMATION_API_KEY=
