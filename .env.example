# --- 1. Database Configuration ---
# SQLite is used by default for local development; no DB_* vars are required.
# DB_NAME=autogitgrow_db
# DB_USER=CodeDeX
# DB_PASSWORD=passwordisroot

# --- 2. GitHub Authentication ---
# PAT_TOKEN: Personal Access Token with 'repo' and 'user' scopes.
# Generate at: https://github.com/settings/tokens
PAT_TOKEN=Your_GitHub_PAT_Token_Here

# BOT_USER: Your GitHub username (used for identification).
BOT_USER=Your_GitHub_Username_Here

# --- 3. AI & Smart Features ---
# GEMINI_API_KEY: Required for AI Insights and Smart Targeting.
GEMINI_API_KEY=Your_Google_Gemini_API_Key_Here

# ENABLE_SMART_TARGETING: If true, uses Gemini to prioritize follow targets.
ENABLE_SMART_TARGETING=false

# --- 4. Automation & API Rules ---
# AUTOMATION_API_KEY: Protects sensitive backend endpoints (X-Automation-Key header).
AUTOMATION_API_KEY=

# Rate limiting for automation capacity.
AUTOMATION_RATE_LIMIT_CAPACITY=10
AUTOMATION_RATE_LIMIT_REFILL_PER_SEC=0.5

# Follower threshold per run cycle.
FOLLOWERS_PER_RUN=150

# --- 5. GitHub Actions Dispatch ---
# Owner and repo where your growth workflows are hosted.
GITHUB_REPO_OWNER=your-gh-username-or-org
GITHUB_REPO_NAME=your-repo-name
# PAT with 'workflow' scope for triggering Actions.
GITHUB_PAT=ghp_your_pat_with_workflow_scope
AUTOMATION_DEFAULT_REF=main

# --- 6. Frontend Configuration ---
# VITE_API_URL: Set in production (e.g., https://api.yourdomain.com).
# VITE_API_URL=
# VITE_AUTOMATION_API_KEY: Mirrors AUTOMATION_API_KEY for frontend auth.
VITE_AUTOMATION_API_KEY=
# CORS configuration for production.
FRONTEND_ORIGIN=

# --- 7. System ---
ENABLE_SQLALCHEMY_CREATE_ALL=true
